<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:JiraLight.Desktop.ViewModels"
        x:Class="JiraLight.Desktop.Views.LoginWindow"
        Width="400" Height="300"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        TransparencyLevelHint="AcrylicBlur"
        CanResize="False"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaTitleBarHeightHint="-1">
	<Window.DataContext>
		<vm:LoginViewModel/>
	</Window.DataContext>

<Border CornerRadius="15">
        <DockPanel LastChildFill="True">
            
            <Border x:Name="TitleBar"
                    DockPanel.Dock="Top"
                    Height="32" Background="Gray">
                <DockPanel>
                    <TextBlock Text="JiraLight"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0"
                               FontWeight="Bold"/>
                    <StackPanel DockPanel.Dock="Right"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right">
                        <Button Content="—" Click="Minimize_Click" />
                        <Button Content="☐" Click="Maximize_Click" />
                        <Button Content="✕" Click="Close_Click" />
                    </StackPanel>
                </DockPanel>
            </Border>

            <Border Padding="20" Background="White">
                <StackPanel Spacing="15"
                            VerticalAlignment="Center">
                    <TextBlock Text="Welcome Back!"
                               FontSize="22" FontWeight="Bold"
                               HorizontalAlignment="Center" Foreground="Black"/>
                    
                    <TextBox Watermark="Username" Text="{Binding Username}" Background="Gray"/>
                    <TextBox Watermark="Password" Text="{Binding Password}" Background="Gray" />

                    <Button Content="Login" Command="{Binding LoginCommand}" Background="Gray" />
                    <Button Content="Register" Command="{Binding OpenRegisterCommand}" Background="Gray" />
                </StackPanel>
            </Border>
        </DockPanel>
    </Border>
</Window>