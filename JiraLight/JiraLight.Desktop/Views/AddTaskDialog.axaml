<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="JiraLight.Desktop.Views.AddTaskDialog">

	<Border	Width="800" Height="370" Background="#AAFFFFFF" CornerRadius="10" Padding="20" HorizontalAlignment="Center" VerticalAlignment="Center">
		<StackPanel Margin="16" Spacing="10" >
			<TextBlock Text="Новая задача" FontSize="18" FontWeight="Bold" Margin="0,0,0,6"/>

			<TextBox Watermark="Название" Text="{Binding Title}"/>
			<TextBox Watermark="Описание" Text="{Binding Description}" AcceptsReturn="True" Height="80"/>

			<ComboBox ItemsSource="{Binding StatusOptions}" SelectedItem="{Binding Status}" Width="300"/>

			<ComboBox ItemsSource="{Binding Users}" SelectedItem="{Binding SelectedUser}" Width="300">
				<ComboBox.ItemTemplate>
					<DataTemplate>
						<TextBlock Text="{Binding Name}"/>
					</DataTemplate>
				</ComboBox.ItemTemplate>
			</ComboBox>

			<Button Content="Save"
					Command="{Binding SaveCommand}"
					Background="#4CAF50"
					Foreground="White"
					FontWeight="Bold"
					Height="35"
					Width="85"
					CornerRadius="10"
					HorizontalAlignment="Right" 
					HorizontalContentAlignment="Center"
					VerticalContentAlignment="Center"/>
		</StackPanel>
	</Border>
</UserControl>
