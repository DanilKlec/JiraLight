<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:JiraLight.Desktop.ViewModels"
             x:Class="JiraLight.Desktop.Views.TaskDetailPage">

	<Border Width="800" Height="500" Padding="20" Background="#AAFFFFFF" CornerRadius="15" Margin="10">
		<StackPanel Spacing="15">

			<!-- Заголовок -->
			<TextBlock Text="Task Details" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>

			<!-- Title -->
			<StackPanel>
				<TextBlock Text="Title" FontWeight="SemiBold" Foreground="#333"/>
				<TextBox Text="{Binding Title, Mode=TwoWay}" FontSize="16" Padding="5"/>
			</StackPanel>

			<!-- Description -->
			<StackPanel>
				<TextBlock Text="Description" FontWeight="SemiBold" Foreground="#333"/>
				<TextBox Text="{Binding Description, Mode=TwoWay}" AcceptsReturn="True" Height="120"
                         FontSize="14" TextWrapping="Wrap" Padding="5"/>
			</StackPanel>

			<!-- Status -->
			<StackPanel>
				<TextBlock Text="Status" FontWeight="SemiBold" Foreground="#333"/>
				<ComboBox SelectedItem="{Binding Status, Mode=TwoWay}" ItemsSource="{Binding StatusOptions}"
                          Width="150" HorizontalAlignment="Left"/>
			</StackPanel>

			<!-- Дата создания / обновления (если есть) -->
			<StackPanel>
				<TextBlock Text="User" FontWeight="SemiBold" Foreground="#333"/>
				<ComboBox ItemsSource="{Binding Users}" SelectedItem="{Binding SelectedUser}" Width="150">
					<ComboBox.ItemTemplate>
						<DataTemplate>
							<TextBlock Text="{Binding Name}"/>
						</DataTemplate>
					</ComboBox.ItemTemplate>
				</ComboBox>
			</StackPanel>

			<!-- Кнопки -->
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0" Spacing="15">
				<Button Content="Save" Command="{Binding SaveCommand}" Width="120" Height="35"
						Background="#4CAF50" Foreground="White" FontWeight="Bold"/>
				<Button Content="Delete" Command="{Binding DeleteCommand}" Width="120" Height="35"
							Background="#f44336" Foreground="White" FontWeight="Bold"/>
				<Button Content="Back" Command="{Binding BackCommand}" Width="120" Height="35"
						Background="#9E9E9E" Foreground="White" FontWeight="Bold"/>
			</StackPanel>

		</StackPanel>
	</Border>
</UserControl>
